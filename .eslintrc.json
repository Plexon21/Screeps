{
    "env": {
        "es6": true,
        "node": true,
        "screeps/screeps": true
    },
    "extends": "eslint:recommended",
    "plugins": [
        "screeps"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "off"
        ]
    }
}